<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pdip"
    tools:context=".MainActivity">

    <com.dicoding.mysound.OutlineTextView
        android:id="@+id/popowi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/popowi_title"
        android:textAppearance="@style/MyTheme.Popowi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintOverlap" />

    <com.dicoding.mysound.OutlineTextView
        android:id="@+id/popowi_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popowi_score"
        android:textAppearance="@style/MyTheme.Popowi"
        app:layout_constraintEnd_toEndOf="@+id/popowi_title"
        app:layout_constraintStart_toStartOf="@+id/popowi_title"
        app:layout_constraintTop_toBottomOf="@+id/popowi_title"
        tools:ignore="VisualLintOverlap" />

    <ImageView
        android:id="@+id/popowi_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/jokowi_image_description"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/u" />

</androidx.constraintlayout.widget.ConstraintLayout>